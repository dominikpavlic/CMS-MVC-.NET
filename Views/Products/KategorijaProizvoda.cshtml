@model CMSProductSystem.Models.ProizvodiKategorije

@{
    ViewData["Title"] = "Detalji proizvoda";
}

<h5 class="alert alert-info detailsproizvod">Odaberite kategoriju:</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="KategorijaProizvoda" enctype="multipart/form-data">           
            <div class="form-group razmak">
                <label class="control-label">Kategorija:</label>
                <select  class="form-control" id="CategoryID" name="CategoryID" asp-items="@ViewBag.KategorijaPopis"></select>
