@model CMSProductSystem.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="alert alert-info">Ažuriranje postojećih korisnika</h1>

<h4 class="alert alert-warning">Promjenite podatke korisnika:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group razmak">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly="readonly" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="Grad" class="control-label"></label>
                <input asp-for="Grad" class="form-control" />
                <span asp-validation-for="Grad" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control"  />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly="readonly" value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label asp-for="Zanimanje" class="control-label"></label>
                <input asp-for="Zanimanje" class="form-control" />
                <span asp-validation-for="Zanimanje" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <label>Aktivnost:</label>
                <select asp-for="Aktivan" class="form-control" asp-items="Model.Aktivnosti"></select>
                <span asp-validation-for="Aktivan" class="text-danger"></span>
            </div>
            <div class="form-group razmak">
                <input type="submit" value="Promjeni" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
