@model List<CMSProductSystem.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "EditUsersInRole";
    var roleId = ViewBag.roleId;
}

<h1>Ažuriranje korisnika u roli</h1>

<form method="POST">
    <div class="cardrole">
        <div class="card-header">
            <h2>Dodaj ili ukloni user-e za ovu rolu</h2>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }


        </div>

        <div class="card-footer">
            <input type="submit" value="Ažuriraj" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-controller="Account" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Prekid</a>
        </div>
    </div>
</form>